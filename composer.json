{
  "name": "painless-php/string",
  "type": "library",
  "description": "String helper functionality for PHP",
  "keywords": ["string", "helpers"],
  "license": "MIT",
  "require": {
    "php": ">=8.1",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.1",
    "spatie/phpunit-watcher": "^1.22",
    "vlucas/phpdotenv": "^v5.5.0",
    "phpbench/phpbench": "^1.2"
  },
  "autoload": {
    "psr-4": {
      "PainlessPHP\\String\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\": "test/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "test": "phpunit",
    "test-watch": "phpunit-watcher watch",
    "benchmark": "phpbench run test/Benchmark"
  }
}
